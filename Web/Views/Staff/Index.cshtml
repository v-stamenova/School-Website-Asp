@{
	ViewData["Title"] = "Състав";
}

<main>
	<header class="masthead" style=" background-image: url('../../images/banners/teachers.png') !important;">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
						<h1 class="open-sans custom-heading">Състав</h1>
					</div>
				</div>
			</div>
		</div>
	</header>
	<article>
		<div class="container pb-3">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="post-preview">
						<a asp-controller="staff" asp-action="leading">
							<h2 class="post-title text-center">
								Ръководство
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="staff" asp-action="administration">
							<h2 class="post-title text-center">
								Администрация
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="staff" asp-action="specialists">
							<h2 class="post-title text-center">
								РНИКТ и ПС
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="staff" asp-action="headTeachers">
							<h2 class="post-title text-center">
								Главни учители
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="staff" asp-action="teachers">
							<h2 class="post-title text-center">
								Учители
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="staff" asp-action="schoolBoard">
							<h2 class="post-title text-center">
								Настоятелство
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="staff" asp-action="muncipalityBoard">
							<h2 class="post-title text-center">
								Обществен съвет
							</h2>
						</a>
					</div>
				</div>
			</div>
		</div>
	</article>
</main>