@{
	ViewData["Title"] = "Нормативни документи";
}

<main>
	<header class="masthead" style=" background-image: url('../../images/banners/leading.jpg') !important;">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
						<h1 class="open-sans custom-heading">Нормативни документи</h1>
					</div>
				</div>
			</div>
		</div>
	</header>
	<article>
		<div class="container pb-3">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="post-preview">
						<a asp-controller="ForSchool" asp-action="Laws">
							<h2 class="post-title text-center">
								Закони
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="ForSchool" asp-action="Regulations">
							<h2 class="post-title text-center">
								Наредби
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="ForSchool" asp-action="Orders">
							<h2 class="post-title text-center">
								Заповеди
							</h2>
						</a>
					</div>
					<hr>
					<div class="post-preview">
						<a asp-controller="ForSchool" asp-action="SchoolDocs">
							<h2 class="post-title text-center">
								Училищни документи
							</h2>
						</a>
					</div>
				</div>
			</div>
		</div>
	</article>
</main>