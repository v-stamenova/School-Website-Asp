@model CreateArticleViewModel

@{ ViewData["Title"] = "Create"; }

<div class="container open-sans">
	<div class="row">
		<div class="col-md-12">
			<h3 class="mt-5 mb-4">Добави @Model.Heading</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<form asp-action="create" asp-controller="article" method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label class="control-label">Заглавие</label>
					<input asp-for="Title" class="form-control" placeholder="Въведете заглавие..." />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label class="control-label">Подзаглавие (не е задължително)</label>
					<input asp-for="Subtitle" class="form-control" placeholder="Въведете подзаглавие..." />
					<span asp-validation-for="Subtitle" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label class="control-label">Съдържание (не е задължително)</label>
					<textarea asp-for="Content" class="form-control" placeholder="Въведете детайлното съдържание на новината..." /></textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
				<div class="form-group open-sans">
					<label asp-for="File" class="control-label">Прикачване на файл (не е задължително)</label>
					<br>
					<input asp-for="File" />
				</div>
				<div class="form-group" style="display: none">
					<input asp-for="Type" value="@Model.Type" /> 
				</div>
				<div class="form-group pt-4 open-sans bold">
					<input type="submit" value="Добави" class="btn btn-block big-button" style="font-size: 20px;" />
				</div>
			</form>
		</div>
	</div>
</div>